# StardewEchoes API Configuration
# Copy this file to .env and fill in your actual values

# Google Gemini API Key (required)
# Get it from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# PostgreSQL Database URL with pgvector (required)
# Format: postgresql://username:password@host:port/database_name
# Example: postgresql://postgres:mypassword@localhost:5432/stardew_echoes
DATABASE_URL=postgresql://username:password@localhost:5432/stardew_echoes

# Optional Configuration
EMBEDDING_MODEL=text-embedding-004
MAX_RELEVANT_MEMORIES=3
CONVERSATION_TIMEOUT_MINUTES=5
